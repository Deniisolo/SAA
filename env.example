# Base de datos Railway
DATABASE_URL="mysql://root:password@containers-us-west-xxx.railway.app:xxxx/railway"

# JWT Secret (genera uno seguro)
JWT_SECRET="your-super-secret-jwt-key-here"

# NextAuth (opcional)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Variables de entorno para producción
NODE_ENV="production"

# SMTP (para envío de correos)
# Reemplaza estos valores con tu proveedor SMTP (Gmail, Mailtrap, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="tu-correo@dominio.com"
SMTP_PASS="tu-contraseña-o-app-password"
